<% if user_signed_in? %>
  <% if answer.like_user(current_user.id) %>
    <%= button_to answer_like_path(like, answer_id: answer.id), method: :delete, id: "like-button", remote: true do %>
      <%= image_tag("icon_red_heart.svg") %>
      <span>
        <%= answer.like_count %>
      </span>
  <% else %>
    <%= button_to answer_likes_path(answer), id: "like-button", remote: true do %>
      <%= image_tag("icon_heart.svg") %>
      <span>
        <%= answer.like_count %>
      </span>
  <% end %>
<% else %>
  <% = image_tag("icon_heart.svg") %>
    <span>
      <%= answer.like_count %>
    </span>
<% end %>